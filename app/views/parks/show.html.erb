<h1><%= @park.name %></h1>

<%= link_to 'Edit', edit_park_path(@park) %> |
<%= link_to 'All Parks', parks_path %>
<br/><br/>
<strong>State</strong>: <%= @park.state.name %>
<br/>
<strong>Region</strong>: <%= @park.state.region.name %>
<br/>
<a href="http://www.nps.gov/<%= @park.web_extension %>" target=_blank>Website</a>
<br/><br/>


<%= render partial: 'google_map', locals: {search_string: "#{@park.name} national park, #{@park.state.name}", width: 600, height: 450} %>

<br/><br/><br/><br/>
<strong>Ratings</strong>:
<ul>
	<% @park.ratings.each do |rating| %>
	<li><%= image_tag rating.activity.activity_image.url %><strong><%= rating.activity.name %></strong>:
		<%= rating.score %></li>
	<% end %>
</ul>
